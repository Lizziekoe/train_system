<h1><%=@line.name() %> Line </h1>

<h2>Update the <%=@line.name() %> line </h2>

<form action="/lines/<%= @line.id() %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your line:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/lines/<%= @line.id() %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Line and Return</button>
</form>
